{
  "name": "crocbot",
  "version": "2026.1.70",
  "description": "Telegram gateway CLI with Pi RPC agent",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./plugin-sdk": "./dist/plugin-sdk/index.js",
    "./plugin-sdk/*": "./dist/plugin-sdk/*",
    "./cli-entry": "./dist/entry.js"
  },
  "bin": {
    "crocbot": "dist/entry.js"
  },
  "files": [
    "dist/acp/**",
    "dist/agents/**",
    "dist/auto-reply/**",
    "dist/browser/**",
    "dist/canvas-host/**",
    "dist/cli/**",
    "dist/commands/**",
    "dist/config/**",
    "dist/compat/**",
    "dist/control-ui/**",
    "dist/cron/**",
    "dist/channels/**",
    "dist/daemon/**",
    "dist/gateway/**",
    "dist/hooks/**",
    "dist/infra/**",
    "dist/media/**",
    "dist/media-understanding/**",
    "dist/link-understanding/**",
    "dist/process/**",
    "dist/plugins/**",
    "dist/plugin-sdk/**",
    "dist/security/**",
    "dist/sessions/**",
    "dist/providers/**",
    "dist/telegram/**",
    "dist/tui/**",
    "dist/tts/**",
    "dist/wizard/**",
    "dist/*.js",
    "dist/*.json",
    "docs/**",
    "assets/**",
    "skills/**",
    "patches/**",
    "README.md",
    "README-header.png",
    "CHANGELOG.md",
    "LICENSE",
    "scripts/postinstall.js",
    "scripts/format-staged.js",
    "scripts/setup-git-hooks.js",
    "git-hooks/**",
    "dist/terminal/**",
    "dist/routing/**",
    "dist/shared/**",
    "dist/utils/**",
    "dist/logging/**",
    "dist/memory/**",
    "dist/metrics/**",
    "dist/markdown/**",
    "dist/node-host/**",
    "dist/pairing/**"
  ],
  "scripts": {
    "dev": "node scripts/run-node.mjs",
    "postinstall": "node scripts/postinstall.js",
    "prepack": "pnpm build && pnpm ui:build",
    "docs:list": "node scripts/build/docs-list.js",
    "docs:bin": "node scripts/build/build-docs-list.mjs",
    "docs:dev": "cd docs && mint dev",
    "docs:build": "cd docs && pnpm dlx --reporter append-only mint broken-links",
    "build": "pnpm canvas:a2ui:bundle && tsdown && node --import tsx scripts/build/canvas-a2ui-copy.ts && node --import tsx scripts/copy-hook-metadata.ts && node --import tsx scripts/build/write-build-info.ts",
    "check": "tsc --noEmit && pnpm lint && pnpm format",
    "release:check": "node --import tsx scripts/release-check.ts",
    "ui:install": "node scripts/ui.js install",
    "ui:dev": "node scripts/ui.js dev",
    "ui:build": "node scripts/ui.js build",
    "start": "node scripts/run-node.mjs",
    "crocbot": "node scripts/run-node.mjs",
    "gateway:watch": "node scripts/watch-node.mjs gateway --force",
    "gateway:dev": "CROCBOT_SKIP_CHANNELS=1 node scripts/run-node.mjs --dev gateway",
    "gateway:dev:reset": "CROCBOT_SKIP_CHANNELS=1 node scripts/run-node.mjs --dev gateway --reset",
    "tui": "node scripts/run-node.mjs tui",
    "tui:dev": "CROCBOT_PROFILE=dev node scripts/run-node.mjs tui",
    "crocbot:rpc": "node scripts/run-node.mjs agent --mode rpc --json",
    "lint": "oxlint --type-aware src test",
    "lint:fix": "pnpm format:fix && oxlint --type-aware --fix src test",
    "format": "oxfmt --check src test",
    "format:fix": "oxfmt --write src test",
    "test": "node scripts/test-parallel.mjs",
    "test:watch": "vitest",
    "test:ui": "pnpm --dir ui test",
    "test:force": "node --import tsx scripts/debug/test-force.ts",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:live": "CROCBOT_LIVE_TEST=1 vitest run --config vitest.live.config.ts",
    "test:docker:onboard": "bash scripts/e2e/onboard-docker.sh",
    "test:docker:gateway-network": "bash scripts/e2e/gateway-network-docker.sh",
    "test:docker:live-models": "bash scripts/docker/test-live-models-docker.sh",
    "test:docker:live-gateway": "bash scripts/docker/test-live-gateway-models-docker.sh",
    "test:docker:qr": "bash scripts/e2e/qr-import-docker.sh",
    "test:docker:doctor-switch": "bash scripts/e2e/doctor-install-switch-docker.sh",
    "test:docker:plugins": "bash scripts/e2e/plugins-docker.sh",
    "test:docker:cleanup": "bash scripts/docker/test-cleanup-docker.sh",
    "test:docker:all": "pnpm test:docker:live-models && pnpm test:docker:live-gateway && pnpm test:docker:onboard && pnpm test:docker:gateway-network && pnpm test:docker:qr && pnpm test:docker:doctor-switch && pnpm test:docker:plugins && pnpm test:docker:cleanup",
    "test:all": "pnpm lint && pnpm build && pnpm test && pnpm test:e2e && pnpm test:live && pnpm test:docker:all",
    "test:install:e2e": "bash scripts/docker/test-install-sh-e2e-docker.sh",
    "test:install:smoke": "bash scripts/docker/test-install-sh-docker.sh",
    "test:install:e2e:openai": "CROCBOT_E2E_MODELS=openai bash scripts/docker/test-install-sh-e2e-docker.sh",
    "test:install:e2e:anthropic": "CROCBOT_E2E_MODELS=anthropic bash scripts/docker/test-install-sh-e2e-docker.sh",
    "protocol:gen": "node --import tsx scripts/build/protocol-gen.ts",
    "protocol:check": "pnpm protocol:gen && git diff --exit-code -- dist/protocol.schema.json",
    "canvas:a2ui:bundle": "bash scripts/build/bundle-a2ui.sh",
    "check:loc": "node --import tsx scripts/check-ts-max-loc.ts --max 500"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.12.0"
  },
  "packageManager": "pnpm@10.23.0",
  "dependencies": {
    "@agentclientprotocol/sdk": "0.13.1",
    "@aws-sdk/client-bedrock": "^3.975.0",
    "@clack/prompts": "^0.11.0",
    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "@lydell/node-pty": "1.2.0-beta.3",
    "@mariozechner/pi-agent-core": "0.49.3",
    "@mariozechner/pi-ai": "0.49.3",
    "@mariozechner/pi-coding-agent": "0.49.3",
    "@mariozechner/pi-tui": "0.49.3",
    "@mozilla/readability": "^0.6.0",
    "@sinclair/typebox": "0.34.47",
    "ajv": "^8.17.1",
    "body-parser": "^2.2.2",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "chromium-bidi": "13.0.1",
    "cli-highlight": "^2.1.11",
    "commander": "^14.0.2",
    "croner": "^9.1.0",
    "detect-libc": "^2.1.2",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "file-type": "^21.3.0",
    "grammy": "^1.39.3",
    "hono": "4.11.4",
    "jiti": "^2.6.1",
    "json5": "^2.2.3",
    "jszip": "^3.10.1",
    "linkedom": "^0.18.12",
    "long": "5.3.2",
    "markdown-it": "^14.1.0",
    "node-edge-tts": "^1.2.9",
    "osc-progress": "^0.3.0",
    "pdfjs-dist": "^5.4.530",
    "playwright-core": "1.58.0",
    "prom-client": "^15.1.3",
    "proper-lockfile": "^4.1.2",
    "sharp": "^0.34.5",
    "sqlite-vec": "0.1.7-alpha.2",
    "tar": "7.5.4",
    "tslog": "^4.10.2",
    "undici": "^7.19.0",
    "ws": "^8.19.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "optionalDependencies": {
    "@napi-rs/canvas": "^0.1.88",
    "node-llama-cpp": "3.15.0"
  },
  "devDependencies": {
    "@grammyjs/types": "^3.23.0",
    "@lit-labs/signals": "^0.2.0",
    "@lit/context": "^1.1.6",
    "@mariozechner/mini-lit": "0.2.1",
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.6",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.0.10",
    "@types/proper-lockfile": "^4.1.4",
    "@types/ws": "^8.18.1",
    "@typescript/native-preview": "7.0.0-dev.20260124.1",
    "@vitest/coverage-v8": "^4.0.18",
    "docx-preview": "^0.3.7",
    "lit": "^3.3.2",
    "lucide": "^0.563.0",
    "ollama": "^0.6.3",
    "oxfmt": "0.28.0",
    "oxlint": "^1.43.0",
    "oxlint-tsgolint": "^0.11.2",
    "quicktype-core": "^23.2.6",
    "rolldown": "1.0.0-rc.3",
    "signal-utils": "^0.21.1",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wireit": "^0.14.12"
  },
  "overrides": {
    "tar": "7.5.4"
  },
  "pnpm": {
    "minimumReleaseAge": 2880,
    "overrides": {
      "@sinclair/typebox": "0.34.47",
      "hono": "4.11.4",
      "tar": "7.5.4"
    }
  },
  "vitest": {
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "lcov"
      ],
      "thresholds": {
        "lines": 70,
        "functions": 70,
        "branches": 70,
        "statements": 70
      },
      "include": [
        "src/**/*.ts"
      ],
      "exclude": [
        "src/**/*.test.ts"
      ]
    },
    "include": [
      "src/**/*.test.ts"
    ],
    "exclude": [
      "dist/**",
      "**/vendor/**",
      "dist/crocbot.app/**"
    ]
  }
}
